<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.admin.alarmapplication.EditActivity">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="back"
        android:clickable="true"
        android:id="@+id/edit_back_button"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:layout_marginRight="0dp"/>
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:clickable="false"
        android:id="@+id/edit_cancel_button"
        android:layout_alignParentTop="true"
        android:visibility="invisible"
        android:layout_marginTop="0dp"
        android:layout_marginRight="0dp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="none"
        android:ems="10"
        android:editable="false"
        android:id="@+id/edit_editText"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@id/cancel_button"
        android:layout_marginStart="86dp"
        android:layout_marginTop="88dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="none"
        android:editable="false"
        android:ems="10"
        android:id="@+id/edit_editText2"
        android:layout_below="@+id/edit_editText"
        android:layout_alignStart="@+id/edit_editText"
        android:layout_marginTop="34dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="none"
        android:editable="false"
        android:ems="10"
        android:id="@+id/edit_editText3"
        android:layout_below="@+id/edit_editText2"
        android:layout_alignStart="@+id/edit_editText2"
        android:layout_marginTop="34dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="20sp"
        android:text="Name:"
        android:id="@+id/edit_textView"
        android:layout_alignBaseline="@+id/edit_editText"
        android:paddingLeft="20dp"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="20sp"
        android:text="Phone:"
        android:id="@+id/edit_textView1"
        android:layout_alignBaseline="@+id/edit_editText2"
        android:paddingLeft="20dp"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="20sp"
        android:text="E-mail:"
        android:id="@+id/edit_textView2"
        android:layout_alignBaseline="@+id/edit_editText3"
        android:paddingLeft="20dp"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="edit"
        android:id="@+id/edit_edit_button"
        android:layout_below="@+id/edit_editText3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="89dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:text="save"
        android:id="@+id/edit_save_button"
        android:layout_below="@+id/edit_editText3"
        android:layout_alignRight="@+id/edit_editText3"
        android:visibility="invisible"
        android:layout_marginTop="89dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:text="delete"
        android:id="@+id/edit_delete_button"
        android:layout_below="@+id/edit_editText3"
        android:layout_alignLeft="@+id/edit_textView"
        android:visibility="invisible"
        android:layout_marginTop="89dp" />
</RelativeLayout>
